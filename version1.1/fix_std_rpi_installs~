#!/bin/bash

sudo cp ~/projects/Avnet_TX_Images/v11_v12/v12/boot/bcm2710-rpi-custom.dtb .
sudo cp ~/projects/Avnet_TX_Images/v11_v12/v12/boot/dt-blob.bin .
sudo cp ~/projects/Avnet_TX_Images/v11_v12/v12/boot/kernel7.img /media/w/boot/
sudo cp ~/projects/Avnet_TX_Images/v11_v12/v12/boot/zImage /media/w/boot/
sudo cp -R ~/projects/Avnet_TX_Images/v11_v12/v12/rootfs/lib/modules/* /media/w/rootfs/lib/modules/


sudo rm /media/w/boot/bcm2708*
sudo rm /media/w/boot/bcm2709*
sudo rm /media/w/boot/bcm283*
cd /media/w/boot
sudo cp bcm2710-rpi-custom.dtb bcm2710-rpi-3-b.dtb 
sudo cp bcm2710-rpi-custom.dtb bcm2710-rpi-3-b-plus.dtb 
sudo cp bcm2710-rpi-custom.dtb bcm2710-rpi-cm3.dtb
